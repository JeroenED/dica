<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
  <ImageView
          android:layout_width="@dimen/users_dialog_avatar"
          android:layout_height="@dimen/users_dialog_avatar"
          android:id="@+id/avatar"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
  <TextView
          android:text="@string/username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tv_username"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/avatar"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          android:textAppearance="@android:style/TextAppearance.Material.Large" android:layout_marginBottom="24dp"
          app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>